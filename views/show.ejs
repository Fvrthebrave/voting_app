<% include ./partials/header %>

<div class="ui padded centered segmented grid">
    <div class="ui eight wide column segment">
        <h1><%= poll.title %></h1>
        <hr>
        <br>
        <form class="ui form" method="POST" action="/<%= poll._id %>/vote">
            <% for(var i = 1; i < poll.fields.length; i++) { %>
                    <div id="selection-div" class="ui checkbox">
                        <input type="checkbox" name="<%= poll.fields[i] %>">
                        <label id="selection"><%= poll.fields[i] %></label>
                    </div>
            <% } %>
            <a class="ui button basic" href="/polls">Back</a>
            <a class="ui button simple" href="/results/<%= poll._id %>">View Current Results</a>
            <% if(currentUser) { %>
                <button class="ui button blue right floated">Vote!</button>
            <% } %>
        </form>
    </div>
</div>

<% include ./partials/footer %>