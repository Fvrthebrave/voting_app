<% include ./partials/header %>

<div class="ui middle aligned center aligned container grid">
    <div class="formSize column">
            <h2 class="ui image header">
                <div class="content">Register an account</div>
            </h2>
            <form class="ui large form" action="/register" method=POST>
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="username" placeholder="Username" required>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="item">
                        <input class="ui fluid large teal submit button" type="submit" value="Create Account">
                    </div>
                </div>
            </form>
            <div class="ui yellow message">
                Already have an account?
            <a href="/login">Login</a>
            </div>
        </div>
    </div>
</div>

