<% include ./partials/header %>
<div class="ui centered grid">
    <div class="ui ten wide column">
        <% if(currentUser) { %>
        <div class="ui center aligned segment">
            <h1>Dashboard</h1>
            <br>
            <a class="ui button blue" href="/new">New Poll</a>
            <a class="ui button simple" href="/profile/<%= currentUser._id %>">My Polls</a>
        </div>
        <div class ="ui center aligned segment">
            <h2>Total Created Polls: <%= currentUser.polls.length %></h2>
            <h2>Total Votes: <%= currentUser.hasVoted.length %></h2>
        </div
        <% } else { %>
            <div class="ui center aligned segment">
                <h1>Please login to view your dashboard!</h1>
                <small>Logging in will allow you to create your own polls and keep track of votes!</small>
                <br>
                <br>
                <a class="ui button blue" href="/login">Login</a>
            </div>
        <% } %>
    </div>
</div>
<% include ./partials/footer %>