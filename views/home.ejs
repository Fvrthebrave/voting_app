<% include ./partials/header %>
<div class="ui centered grid">
    <div class="ui ten wide column">
        <div class="ui two item menu">
          <a class="item" href="/polls"><i class="ui list icon"></i>All Polls</a>
          <% if(!currentUser) { %>
              <a class="item" href="/login"><i class="ui user icon"></i>Login</a>
          <% } else { %>
              <a class="item" href="/logout"><i class="ui door icon"></i>Logout</a>
          <% } %>
        </div>
        <% if(currentUser) { %>
        <div class="ui center aligned segment">
            <h1>Dashboard</h1>
            <br>
            <a class="ui button blue" href="/new">New Poll</a>
            <a class="ui button simple" href="/profile/<%= currentUser._id %>">My Polls</a>
        </div>
        <% } else { %>
            <div class="ui center aligned segment">
                <h1>Please login to view your dashboard!</h1>
                <small>Logging in will allow you to create your own polls and keep track of votes!</small>
                <br>
                <br>
                <a class="ui button blue" href="/login">Login</a>
            </div>
        <% } %>
    </div>
</div>
<% include ./partials/footer %>